
{
    "rulesDirectory": [
      "node_modules/codelyzer"
    ],
    "extends": ["tslint:recommended", "tslint-angular", "tslint-plugin-prettier", "tslint-config-prettier"],
    "rules": {
      "prettier": true,
      "component-selector": [
        true,
        "element",
        "app",
        "page",
        "kebab-case"
      ],
      "directive-selector": [
        true,
        "attribute",
        "app",
        "camelCase"
      ],
      "import-blacklist": [
        true,
        "rxjs/Rx"
      ],
      "interface-name": false,
      "max-classes-per-file": true,
      "no-console": false,
      "one-variable-per-declaration": false,
      "ordered-imports": false,
      "no-namespace": false
    }
  }